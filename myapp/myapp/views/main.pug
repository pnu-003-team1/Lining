script(src='http://code.jquery.com/jquery-1.10.2.js')
script.
  var k = {
    email: $('#email').val(),
    full: true
  };
  var kk = {
    email: $('#email').val(),
    full: false
  };
  $(document).ready(function() {
    $('#full').click(function() { });
  });

  function check(box) {
    if(box.checked == true) {
      $('#full').click(function() {
        $.ajax({
          url: 'http://54.164.52.65:3000/buser/fullCheck',
          type: 'post',
          dataType: 'json',
          data: k,
          success: function(data) {
            console.log("데이터가 전송되었습니다");
          }
        });
      });
    }
    else {
      $('#full').click(function() {
        $.ajax({
          url: 'http://54.164.52.65:3000/buser/fullCheck',
          type: 'post',
          dataType: 'json',
          data: kk,
          success: function(data) {
            console.log("데이터가 전송되었습니다");
          }
        });
      });
    }
  }
  function logout(){
    var con = confirm("로그아웃 하시겠습니까?");
    if(con){
      location.href="/logout";
    }
    else{}

  }
