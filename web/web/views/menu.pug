head
  meta(charset='UTF-8')
  title sign up
br
form(name='fr', action='/menu/modify', method='post', onsubmit='onModify()')
  | Email
  br
  input#email(type='text', name='email')
  br
  |   Food name
  br
  input#food(type='text', name='food')
  br
